<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity_list_view">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnregresar"
            android:layout_width="100dp"
            android:layout_height="44dp"
            android:text="Atras"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="3dp" />

        <EditText
            android:id="@+id/txtcid"
            android:layout_width="334dp"
            android:layout_height="45dp"
            android:ems="10"
            android:hint="Buscar"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="63dp" />

        <ListView
            android:id="@+id/listaContactos"
            android:layout_width="377dp"
            android:layout_height="475dp"
            android:choiceMode="singleChoice"
            tools:layout_editor_absoluteX="18dp"
            tools:layout_editor_absoluteY="118dp" />

        <Button
            android:id="@+id/btn_view_image"
            android:layout_width="200dp"
            android:layout_height="44dp"
            android:text="Ver Imagen"
            tools:layout_editor_absoluteX="211dp"
            tools:layout_editor_absoluteY="614dp" />

        <Button
            android:id="@+id/btncompartir"
            android:layout_width="200dp"
            android:layout_height="44dp"
            android:text="Compartir Contacto"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="614dp" />

        <Button
            android:id="@+id/btnactualizar"
            android:layout_width="200dp"
            android:layout_height="44dp"
            android:text="Actualizar Contacto"
            tools:layout_editor_absoluteX="211dp"
            tools:layout_editor_absoluteY="671dp" />

        <Button
            android:id="@+id/btneliminar"
            android:layout_width="200dp"
            android:layout_height="44dp"
            android:text="Eliminar Contacto"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="671dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>